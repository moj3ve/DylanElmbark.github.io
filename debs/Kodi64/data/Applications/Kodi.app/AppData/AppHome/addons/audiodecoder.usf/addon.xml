<?xml version="1.0" encoding="UTF-8"?>
<addon
  id="audiodecoder.usf"
  version="2.0.1"
  name="USF Audio Decoder"
  provider-name="spiff">
  <requires>
    
<import addon="kodi.binary.global.main" version="1.0.14"/>
<import addon="kodi.binary.global.filesystem" version="1.0.2"/>
<import addon="kodi.binary.instance.audiodecoder" version="2.0.0"/>
  </requires>
  <extension
    point="kodi.audiodecoder"
    name="usf"
    extension=".miniusf"
    tags="true"
    library_ios="audiodecoder.usf.2.0.1.dylib"/>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">USF - Nintendo Ultra 64 Sound Format Decoder</summary>
    <description lang="en">This is a decoder which adds support for playing (Ultra) Nintendo 64 Sound format (.USF/.MINIUSF) files.</description>
    <platform>ios-aarch64</platform>
  </extension>
</addon>
